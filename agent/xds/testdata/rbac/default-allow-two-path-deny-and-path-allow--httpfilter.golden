{
  "name": "envoy.filters.http.rbac",
  "typedConfig": {
    "@type": "type.googleapis.com/envoy.extensions.filters.http.rbac.v3.RBAC",
    "rules": {
      "action": "DENY",
      "policies": {
        "consul-intentions-layer7-0": {
          "permissions": [
            {
              "urlPath": {
                "path": {
                  "exact": "/v1/secret"
                }
              }
            },
            {
              "andRules": {
                "rules": [
                  {
                    "urlPath": {
                      "path": {
                        "exact": "/v1/admin"
                      }
                    }
                  },
                  {
                    "notRule": {
                      "urlPath": {
                        "path": {
                          "exact": "/v1/secret"
                        }
                      }
                    }
                  }
                ]
              }
            }
          ],
          "principals": [
            {
              "authenticated": {
                "principalName": {
                  "safeRegex": {
                    "regex": "^spiffe://test.consul/ns/default/dc/[^/]+/svc/web$"
                  }
                }
              }
            }
          ]
        }
      }
    }
  }
}