{
  "name": "envoy.filters.http.rbac",
  "config": {
      "rules": {
            "policies": {
                  "consul-intentions-layer7-0": {
                        "permissions": [
                              {
                                    "url_path": {
                                          "path": {
                                                "prefix": "/"
                                              }
                                        }
                                  }
                            ],
                        "principals": [
                              {
                                    "authenticated": {
                                          "principal_name": {
                                                "safe_regex": {
