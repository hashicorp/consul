{
  "name": "envoy.filters.http.rbac",
  "typedConfig": {
    "@type": "type.googleapis.com/envoy.config.filter.http.rbac.v2.RBAC",
    "rules": {
      "action": "DENY",
      "policies": {
        "consul-intentions-layer4": {
          "permissions": [
            {
              "any": true
            }
          ],
          "principals": [
            {
              "andIds": {
                "ids": [
                  {
                    "authenticated": {
                      "principalName": {
                        "safeRegex": {
                          "googleRe2": {

                          },
                          "regex": "^spiffe://[^/]+/ns/default/dc/[^/]+/svc/[^/]+$"
                        }
                      }
                    }
                  },
                  {
                    "notId": {
                      "authenticated": {
                        "principalName": {
                          "safeRegex": {
                            "googleRe2": {

                            },
                            "regex": "^spiffe://[^/]+/ns/default/dc/[^/]+/svc/web$"
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    }
  }
}