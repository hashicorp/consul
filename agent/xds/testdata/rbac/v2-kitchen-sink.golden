                {
                  "authenticated": {
                    "principalName": {
                      "safeRegex": {
                        "regex": "^spiffe://test.consul/ns/default/dc/[^/]+/svc/api$"
                      }
                    }
                  }
                },
                {
                  "andIds": {
                    "ids": [
                      {
                        "authenticated": {
                          "principalName": {
                            "safeRegex": {
                              "regex": "^spiffe://test.consul/ns/default/dc/[^/]+/svc/[^/]+$"
                            }
                          }
                        }
                      },
                      {
                        "notId": {
