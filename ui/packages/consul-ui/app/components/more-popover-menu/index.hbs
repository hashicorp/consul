<div
  class="more-popover-menu"
  ...attributes
>
  <PopoverMenu
    @expanded={{@expanded}}
    @onchange={{action @onchange}}
    @keyboardAccess={{true}}
  as |components api|>
    <BlockSlot @name="trigger">
      More
    </BlockSlot>
    <BlockSlot @name="menu">
      {{yield components.MenuItem}}
    </BlockSlot>
  </PopoverMenu>
</div>
