{{#let @list as |SNL|}}
  <SNL.Item class='consul-side-nav__selector'>
    <Hds::Dropdown
      @listPosition='left'
      @width='15.5rem'
      class='hds-side-nav__dropdown'
      @isInline={{true}}
      ...attributes
      as |DD|
    >
      <DD.ToggleButton
        class='consul-side-nav__selector-toggle'
        @icon={{@icon}}
        @text={{get @item @key}}
      />
      <DD.Header @hasDivider={{true}}>
        {{! <Hds::Text::Body @size='100' @color='faint'>WAN federated datacenters</Hds::Text::Body> }}
        <Hds::Form::TextInput::Base
          @type='search'
          @value={{this.search}}
          placeholder={{@placeholder}}
          aria-label={{@placeholder}}
          {{on 'input' this.onSearchInput}}
        />
      </DD.Header>
      {{#each this.filteredItems as |item|}}
        {{yield DD item}}
      {{/each}}
      {{#if @footerLink}}
        <DD.Footer @hasDivider={{true}}>
          <Hds::Link::Standalone
            @href={{@footerLink}}
            @isHrefExternal={{false}}
            @text={{@footerLinkText}}
            @iconPosition='trailing'
            @icon='arrow-right'
            @color='secondary'
          />
        </DD.Footer>
      {{/if}}
    </Hds::Dropdown>
  </SNL.Item>
{{/let}}