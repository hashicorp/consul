<fieldset>
  <div role="radiogroup" id="radiogroup_{{this.name}}" data-test-radiogroup={{this.name}}>{{! menu?}}
{{#each @items as |item|}}
  {{#let (if (not-eq item.key undefined) item.key item.value) (or item.label item.value) as |_key _value|}}
    <label tabindex={{if this.keyboardAccess '0'}} onkeydown={{if this.keyboardAccess (action 'keydown')}} class="type-radio value-{{_key}}" data-test-radiobutton="{{this.name}}_{{_key}}"> {{! slugify }}
      <input type="radio" name={{this.name}} value={{_key}} checked={{if (eq (concat @value) _key) 'checked'}} onchange={{action "change"}} />
      <span>{{_value}}</span>
    </label>
  {{/let}}
{{/each}}
  </div>
</fieldset>
