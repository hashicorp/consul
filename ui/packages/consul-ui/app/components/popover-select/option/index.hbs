{{#let @components.MenuItem as |MenuItem|}}
  <MenuItem
    class={{if this.selected 'is-active'}}
    {{did-upsert this.connect @selected}}
    ...attributes
    @onclick={{action @onclick this}}
    @selected={{this.selected}}
  >
    <BlockSlot @name="label">
      {{yield}}
    </BlockSlot>
  </MenuItem>
{{/let}}
