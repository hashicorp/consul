<div class="certificate">
  <CopyButton @value={{@item}} @name={{@name}} />
  <button
    type="button"
    class={{concat "visibility" (if this.show " hide" " show")}}
    {{on "click" this.setVisibility}}
  >
  </button>
{{#if this.show}}
  <div class="key">{{@item}}</div>
{{else}}
  <hr />
{{/if}}
</div>