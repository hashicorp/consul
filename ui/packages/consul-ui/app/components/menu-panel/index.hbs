{{yield}}
{{#let (hash
  change=(fn (noop))
) as |api|}}
<div
  class={{class-map
    (array 'menu-panel')
    (array 'menu-panel-deprecated')
    (array @position)
    (array this.isConfirmation 'confirmation')
  }}
  {{on-insert this.connect}}
>
  <YieldSlot @name="controls">
    {{yield api}}
  </YieldSlot>
  {{#yield-slot name="header"}}
    <div>
      {{yield api}}
    </div>
  {{else}}
  {{/yield-slot}}
  <ul role="menu" ...attributes>
    <YieldSlot @name="menu">
      {{yield api}}
    </YieldSlot>
  </ul>
</div>
{{/let}}