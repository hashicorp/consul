{{yield}}
{{#let (hash
  change=(action "change")
) as |api|}}
<div
  class={{join ' ' (compact (array
    'menu-panel'
    position
    (if isConfirmation 'confirmation')
  ))}}
  {{did-insert (action 'connect')}}
>
  <YieldSlot @name="controls">
    {{yield api}}
  </YieldSlot>
  {{#yield-slot name="header"}}
    <div>
      {{yield api}}
    </div>
  {{else}}
  {{/yield-slot}}
  <ul role="menu" ...attributes>
    <YieldSlot @name="menu">
      {{yield api}}
    </YieldSlot>
  </ul>
</div>
{{/let}}