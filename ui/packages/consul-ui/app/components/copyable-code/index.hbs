<div
  class={{class-map
    'copyable-code'
    (array 'obfuscated' @obfuscated)
  }}
  ...attributes
>
{{#if @obfuscated}}
  <Disclosure
  as |disclosure|>
    <disclosure.Action
      {{on 'click' disclosure.toggle}}
      aria-label={{if disclosure.expanded 'Hide' 'Show'}}
    >

    </disclosure.Action>
    <disclosure.Details as |details|>
      <pre><code
        id={{details.id}}
      >{{@value}}</code></pre>
    </disclosure.Details>
    <disclosure.Details
      @auto={{false}}
    as |details|>
      {{#if (not details.expanded)}}
        <hr />
      {{/if}}
    </disclosure.Details>
  </Disclosure>

  <ConsulCopyButton
    @value={{@value}}
    @name={{@name}}
  />

{{else}}
  <pre><code
  >{{@value}}</code></pre>
  <ConsulCopyButton
    @value={{@value}}
    @name={{@name}}
  />
{{/if}}

</div>