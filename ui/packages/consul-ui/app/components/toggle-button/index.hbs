<input
  ...attributes
  {{element-ref this.setupInput}}
  type="checkbox"
  checked={{if this.checked 'checked' undefined}}
  id={{concat 'toggle-button-' this.guid}}
  {{on 'change' this.change}}
/>
<label
  {{element-ref this.setupLabel}}
  {{click-outside
    enabled=this.checked
    excludeElements=(array this.input)
    onClickOutside=this.handleClickOutside
  }}
  for={{concat 'toggle-button-' this.guid}}
>
  {{yield (hash
    click=this.click
  )}}
</label>