<input
  ...attributes
  {{on-insert this.captureInput}}
  type="checkbox"
  checked={{if @checked 'checked' undefined}}
  id={{concat 'toggle-button-' this.guid}}
  onchange={{this.change}}
/>
<label
  {{on-insert this.captureLabel}}
  for={{concat 'toggle-button-' this.guid}}
>
  {{yield (hash
    click=this.click
  )}}
</label>