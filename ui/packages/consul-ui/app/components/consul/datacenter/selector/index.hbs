  {{else}}
    <SNL.Item class='consul-side-nav__datacenter'>
      <FlightIcon
        @name='server-cluster'
        @color='var(--token-form-control-disabled-foreground-color)'
      />
      <Hds::Text::Display @size='200' @color='disabled'>{{@dc.Name}}</Hds::Text::Display>
    </SNL.Item>
  {{/if}}
{{/let}}