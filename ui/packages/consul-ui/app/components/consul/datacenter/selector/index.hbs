{{#let @list as |SNL|}}
  {{#if (gt @dcs.length 1)}}
    <SNL.Title>Datacenter</SNL.Title>
    <SNL.Item class='consul-side-nav__selector'>
      <Hds::Dropdown
        @listPosition='left'
        @width='15.5rem'
        class='hds-side-nav__dropdown'
        @isInline={{true}}
        as |DD|
      >
        <DD.ToggleButton
          class='consul-side-nav__selector-toggle'
          @icon='server-cluster'
          @text={{@dc.Name}}
        />
        <DD.Header @hasDivider={{true}}>
          <Hds::Form::TextInput::Base
            @type='search'
            @value={{this.search}}
            placeholder='Search'
            aria-label='Search datacenters'
            {{on 'input' this.onSearchInput}}
          />
        </DD.Header>
        {{#each this.filteredItems as |item|}}
          <DD.Checkmark
            @selected={{eq @dc.Name item.Name}}
            @href={{href-to
              '.'
              params=(hash
                dc=item.Name partition=undefined nspace=(if (gt @nspace.length 0) @nspace undefined)
              )
            }}
            @isHrefExternal={{false}}
          >{{item.Name}}</DD.Checkmark>
        {{/each}}
      </Hds::Dropdown>
    </SNL.Item>
    {{!-- <li class='dcs' data-test-datacenter-menu>
