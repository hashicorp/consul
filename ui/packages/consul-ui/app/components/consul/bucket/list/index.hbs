{{#if (and @partition (can 'use partitions'))}}
  {{#if (not-eq @item.Partition @partition)}}
    <dl class="consul-bucket-list">
      <dt
        class="partition"
        {{tooltip}}
      >
        Admin Partition
      </dt>
      <dd>
        {{@item.Partition}}
      </dd>
      <dt
        class="nspace"
        {{tooltip}}
      >
        Namespace
      </dt>
      <dd>
        {{@item.Namespace}}
      </dd>

{{#if (and @service @item.Service)}}
      <dt
        class="service"
      >
        Service
      </dt>
      <dd>
        {{@item.Service}}
      </dd>
{{/if}}

    </dl>
  {{/if}}
{{else if (and @nspace (can 'use nspace'))}}
  {{#if (not-eq @item.Namespace @nspace)}}
    <dl class="consul-bucket-list">
      <dt
        class="nspace"
        {{tooltip}}
      >
        Namespace
      </dt>
      <dd>
        {{@item.Namespace}}
      </dd>
{{#if (and @service @item.Service)}}
      <dt
        class="service"
      >
        Service
      </dt>
      <dd>
        {{@item.Service}}
      </dd>
{{/if}}
    </dl>
  {{/if}}
{{/if}}
