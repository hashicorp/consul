{{#if (gt items.length 0)}}
<ListCollection
  class="consul-intention-permission-header-list"
  @items={{items}}
  @scroll="native"
  @cellHeight={{42}}
as |item|>
  <BlockSlot @name="details">
    <dl>
      <dt>
        <Tooltip>
          Header
        </Tooltip>
      </dt>
      <dd>
        {{item.Name}} {{route-match item}}
      </dd>
    </dl>
  </BlockSlot>
  <BlockSlot @name="actions" as |Actions|>
    <Actions as |Action|>
      <Action data-test-delete-action @onclick={{action ondelete item}} class="dangerous">
        <BlockSlot @name="label">
          Delete
        </BlockSlot>
        <BlockSlot @name="confirmation" as |Confirmation|>
          <Confirmation class="warning">
            <BlockSlot @name="header">
              Confirm delete
            </BlockSlot>
            <BlockSlot @name="body">
              <p>
                Are you sure you want to delete this header?
              </p>
            </BlockSlot>
            <BlockSlot @name="confirm" as |Confirm|>
              <Confirm>Delete</Confirm>
            </BlockSlot>
          </Confirmation>
        </BlockSlot>
      </Action>
    </Actions>
  </BlockSlot>
</ListCollection>
{{/if}}