<div role="menu" class="above">
    <InformedAction class="warning">
            <:header>
                Confirm Delete
            </:header>
            <:body>
                <p>
                {{message}}
                </p>
            </:body>
            <:actions as |Actions|>
                <Actions.Action class="dangerous">
                <Action data-test-confirm-delete {{on 'click' (action execute)}}>
                    Delete
                </Action>
                </Actions.Action>
                <Actions.Action>
                <Action {{on 'click' (action cancel)}}>
                    Cancel
                </Action>
                </Actions.Action>
            </:actions>
    </InformedAction>
</div>