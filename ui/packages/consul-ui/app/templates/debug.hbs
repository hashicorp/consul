<App class="docs" id="wrapper">
  <:main-nav>

    <DocfyOutput as |node|>
      <ul>
{{#each node.children as |child|}}
  {{#each child.children as |child|}}
          <li role="separator">{{child.label}}</li>
    {{#each (flatten-property child 'pages') as |child|}}
          <li
            class={{if (is-href (to-route child.url)) 'is-active'}}
          >
            <DocfyLink @to={{child.url}}>
              {{child.title}}
            </DocfyLink>
          </li>
    {{/each}}
  {{/each}}
{{/each}}
      </ul>
    </DocfyOutput>

  </:main-nav>
  <:main>
    <DocfyOutput @fromCurrentURL={{true}} as |page|>
      {{outlet}}
    </DocfyOutput>
  </:main>
</App>

