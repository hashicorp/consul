{{#if item.Meta}}
  {{#with (object-entries item.Meta) as |meta|}}
    <TabularCollection
      data-test-metadata
      @items={{meta}} as |item index|
    >
        <BlockSlot @name="header">
            <th>Key</th>
            <th>Value</th>
        </BlockSlot>
        <BlockSlot @name="row">
            <td>
              <span>
                {{object-at 0 item}}
              </span>
            </td>
            <td>
              <span>{{object-at 1 item}}</span>
            </td>
        </BlockSlot>
    </TabularCollection>
  {{/with}}
{{else}}
  <p>
    This instance has no meta data.
  </p>
{{/if}}
