{{ivy-codemirror
    value=value
    name=name
    class=class
    options=options
    valueUpdated=(action onkeyup)
}}
<pre><code>{{yield}}</code></pre>
{{#if (and (not readonly) (not syntax))}}
  {{#power-select
    onchange=(action 'change')
    selected=mode
    searchEnabled=false
    options=modes as |mode|
  }}
    {{mode.name}}
  {{/power-select}}
{{/if}}
