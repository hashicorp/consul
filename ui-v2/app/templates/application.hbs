<HeadLayout />
{{title 'Consul' separator=' - '}}
{{#if (not loading)}}
  {{outlet}}
{{else}}
  <HashicorpConsul @id="wrapper" @permissions={{permissions}} @dcs={{dcs}} @dc={{dc}} @nspaces={{nspaces}} @nspace={{nspace}}>
    <AppView @class="loading show">
      <BlockSlot @name="content">
        {{partial 'consul-loading'}}
      </BlockSlot>
    </AppView>
  </HashicorpConsul>
{{/if}}
